{
  "name": "CAM-Net_x16_Colorization",
  "use_tb_logger": true,
  "model": "CAMNet",
  "scale": 16,
  "task": "Colorization",
  "HR_W": 84,
  "HR_H": 84,
  "gpu_ids": [
    0
  ],
  "datasets": {
    "train": {
      "name": "Train_Colorization",
      "mode": "Co_four_levels",
      "dataroot_HR_Color": "./data/miniImagenet_train_84.lmdb",
      //      "dataroot_D1": "./data/miniImagenet_train_10.lmdb",
      //      "dataroot_D2": "./data/miniImagenet_train_21.lmdb",
      //      "dataroot_D3": "./data/miniImagenet_train_42.lmdb",
      "subset_file": null,
      "use_shuffle": true,
      "use_flip": true,
      "use_rot": true,
      "n_workers": 6,
      "batch_size_per_month": 400,
      "batch_size_per_day": 1
    },
    "val": {
      "name": "Validation_Colorization",
      "mode": "Co_four_levels",
      "dataroot_HR_Color": "./data/miniImagenet_validation_84.lmdb"
    }
  },
  "path": {
    "root": "/path/to/CAM-Net",
    "pretrain_model_G": null
  },
  "network_G": {
    "which_model_G": "CAMNet",
    "num_dense_channels": [
      256,
      192,
      128,
      64
    ],
    "num_residual_channels": [
      128,
      64,
      64,
      64
    ],
    "num_blocks": 6,
    "in_nc": 1,
    "out_nc": 2,
    "code_nc": 5,
    "map_nc": 128,
    "latent_nc": 512,
    "use_noise_encoder": false,
    "no_upsample": false
  },
  "train": {
    "lr_G": 1e-4,
    "weight_decay_G": 0,
    "beta1_G": 0.9,
    "lr_scheme": "MultiStepLR",
    "lr_steps": [
      85000
    ],
    "lr_gamma": 1.0,
    "use_dci": true,
    "inter_supervision": true,
    "dci_num_comp_indices": 2,
    "dci_num_simp_indices": 10,
    "num_samples_per_img": 120,
    "sample_perturbation_magnitude": 0,
    "zero_code": false,
    "num_months": 20,
    "num_days": 1e4,
    "manual_seed": 0,
    "val_freq": 5e3,
    "pixel_weight": 0,
    "pixel_criterion": "l1"
  },
  "logger": {
    "print_freq": 200,
    "save_checkpoint_freq": 5e3
  }
}
